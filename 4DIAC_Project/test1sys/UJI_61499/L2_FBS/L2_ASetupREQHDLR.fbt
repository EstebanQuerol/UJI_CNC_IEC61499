<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE FBType SYSTEM "http://www.holobloc.com/xml/LibraryElement.dtd">
<FBType Comment="Basic Function Block Type" Name="L2_ASetupREQHDLR">
  <Identification Standard="61499-2"/>
  <VersionInfo Author="EQUEROL" Date="2014-11-28" Organization="UJI" Version="0.0"/>
  <CompilerInfo/>
  <InterfaceList>
    <EventInputs>
      <Event Comment="Initialization Request" Name="INIT" Type="Event">
        <With Var="MID"/>
        <With Var="QI"/>
      </Event>
      <Event Comment="Normal Execution Request" Name="REQ" Type="Event">
        <With Var="PartInfoIn"/>
        <With Var="SetupIn"/>
        <With Var="MIDIn"/>
      </Event>
    </EventInputs>
    <EventOutputs>
      <Event Comment="Initialization Confirm" Name="INITO" Type="Event">
        <With Var="QO"/>
      </Event>
      <Event Comment="Execution Confirmation" Name="CNF" Type="Event">
        <With Var="PartInfoOut"/>
        <With Var="MIDOut"/>
        <With Var="SetupOut"/>
      </Event>
    </EventOutputs>
    <InputVars>
      <VarDeclaration Name="QI" Type="BOOL"/>
      <VarDeclaration Comment="Machine identifier" Name="MID" Type="USINT"/>
      <VarDeclaration ArraySize="3" Comment="Part ID, family and type" Name="PartInfoIn" Type="UINT"/>
      <VarDeclaration Comment="Machine identifier" Name="MIDIn" Type="USINT"/>
      <VarDeclaration Comment="Subphase to execute" Name="SetupIn" Type="STRING"/>
    </InputVars>
    <OutputVars>
      <VarDeclaration Name="QO" Type="BOOL"/>
      <VarDeclaration Comment="Machine identifier" Name="MIDOut" Type="USINT"/>
      <VarDeclaration ArraySize="3" Comment="Part identifier, family and type" Name="PartInfoOut" Type="UINT"/>
      <VarDeclaration Comment="Subphase to execute" Name="SetupOut" Type="STRING"/>
    </OutputVars>
  </InterfaceList>
  <BasicFB>
    <InternalVars>
      <VarDeclaration Comment="This variable allow to diferentiate between accepted and rejected request" InitialValue="FALSE" Name="Accepted" Type="BOOL"/>
      <VarDeclaration Comment="loop variable" InitialValue="0" Name="i" Type="USINT"/>
    </InternalVars>
    <ECC>
      <ECState Comment="Initial State" Name="START" x="550.0" y="425.0"/>
      <ECState Comment="Initialization" Name="INIT" x="920.0" y="140.0">
        <ECAction Algorithm="INIT" Output="INITO"/>
      </ECState>
      <ECState Comment="Normal execution" Name="REQ" x="950.0" y="855.0">
        <ECAction Algorithm="REQ"/>
      </ECState>
      <ECState Name="AcceptPacket" x="1615.0" y="1330.0">
        <ECAction Output="CNF"/>
      </ECState>
      <ECState Name="RejectPacket" x="475.0" y="1520.0"/>
      <ECTransition Comment="" Condition="INIT" Destination="INIT" Source="START" x="915.0" y="335.0"/>
      <ECTransition Comment="" Condition="1" Destination="START" Source="INIT" x="550.0" y="140.0"/>
      <ECTransition Comment="" Condition="REQ" Destination="REQ" Source="START" x="960.0" y="710.0"/>
      <ECTransition Comment="" Condition="Accepted = TRUE" Destination="AcceptPacket" Source="REQ" x="1255.0" y="1215.0"/>
      <ECTransition Comment="" Condition="Accepted = FALSE" Destination="RejectPacket" Source="REQ" x="710.0" y="1145.0"/>
      <ECTransition Comment="" Condition="1" Destination="START" Source="RejectPacket" x="135.0" y="590.0"/>
      <ECTransition Comment="" Condition="1" Destination="START" Source="AcceptPacket" x="1420.0" y="655.0"/>
    </ECC>
    <Algorithm Comment="Initialization algorithm" Name="INIT">
      <ST Text="QO := QI;&#10;MIDOut := MID;"/>
    </Algorithm>
    <Algorithm Comment="Normally executed algorithm" Name="REQ">
      <ST Text="IF MIDIn = MID THEN&#10;&#9;(*The received packet is for this machine, map outputs*)&#10;&#9;Accepted := TRUE;&#10;&#9;PartInfoOut[0] := PartInfoIn[0];&#10;&#9;PartInfoOut[1] := PartInfoIn[1];&#10;&#9;PartInfoOut[2] := PartInfoIn[2];&#10;&#9;SetupOut :=SetupIn;&#10;ELSE&#10;&#9;Accepted := FALSE;&#10;END_IF;"/>
    </Algorithm>
  </BasicFB>
</FBType>
