<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE FBType SYSTEM "http://www.holobloc.com/xml/LibraryElement.dtd">
<FBType Comment="Service Interface Function Block Type" Name="Pocket">
  <Identification Description="Converts an AP224 machining feature into G code to be executed into FAGOR 8070 CNC controller" Standard="61499-2"/>
  <VersionInfo Author="Esteban" Date="2014-07-15" Organization="ESID-UJI" Version="0.0"/>
  <InterfaceList>
    <EventInputs>
      <Event Comment="Service Request" Name="REQ" Type="Event">
        <With Var="QI"/>
        <With Var="Z"/>
        <With Var="I"/>
        <With Var="D"/>
        <With Var="A"/>
        <With Var="J"/>
        <With Var="K"/>
        <With Var="M"/>
        <With Var="Q"/>
        <With Var="X"/>
        <With Var="Y"/>
        <With Var="D_Ref"/>
      </Event>
    </EventInputs>
    <EventOutputs>
      <Event Comment="Confirmation of Requested Service" Name="CNF" Type="Event">
        <With Var="QO"/>
        <With Var="sBlock"/>
      </Event>
    </EventOutputs>
    <InputVars>
      <VarDeclaration Comment="Event Input Qualifier" Name="QI" Type="BOOL"/>
      <VarDeclaration Comment="Reference plane" Name="Z" Type="REAL"/>
      <VarDeclaration Comment="pocket depth" Name="I" Type="REAL"/>
      <VarDeclaration Comment="surface - reference plane distance" Name="D" Type="REAL"/>
      <VarDeclaration Comment="angel with X-axis" Name="A" Type="REAL"/>
      <VarDeclaration Comment="pocket half length" Name="J" Type="REAL"/>
      <VarDeclaration Comment="pocket half width" Name="K" Type="REAL"/>
      <VarDeclaration Comment="Corner type" Name="M" Type="INT"/>
      <VarDeclaration Comment="rounding radius" Name="Q" Type="REAL"/>
      <VarDeclaration Comment="X center position" Name="X" Type="REAL"/>
      <VarDeclaration Comment="Y center position" Name="Y" Type="REAL"/>
      <VarDeclaration Comment="G90(F) or G91(T)" InitialValue="True" Name="D_Ref" Type="BOOL"/>
    </InputVars>
    <OutputVars>
      <VarDeclaration Comment="Event Output Qualifier" Name="QO" Type="BOOL"/>
      <VarDeclaration Comment="G code block" Name="sBlock" Type="STRING"/>
    </OutputVars>
    <Plugs>
      <AdapterDeclaration Name="ATimeOut" Type="ANY_ADAPTER"/>
    </Plugs>
  </InterfaceList>
  <Service Comment="Service Interface Function Block Type" LeftInterface="APPLICATION" RightInterface="RESOURCE">
    <ServiceSequence Name="request_error">
      <ServiceTransaction>
        <InputPrimitive Event="REQ+" Interface="APPLICATION" Parameters="SD"/>
        <OutputPrimitive Event="CNF-" Interface="APPLICATION" Parameters="STATUS"/>
      </ServiceTransaction>
    </ServiceSequence>
    <ServiceSequence Name="request_inhibited">
      <ServiceTransaction>
        <InputPrimitive Event="REQ-" Interface="APPLICATION" Parameters="SD"/>
        <OutputPrimitive Event="CNF-" Interface="APPLICATION" Parameters="STATUS"/>
      </ServiceTransaction>
    </ServiceSequence>
    <ServiceSequence Name="request_confirm">
      <ServiceTransaction>
        <InputPrimitive Event="REQ+" Interface="APPLICATION" Parameters="SD"/>
        <OutputPrimitive Event="CNF+" Interface="APPLICATION" Parameters="RD"/>
      </ServiceTransaction>
    </ServiceSequence>
  </Service>
</FBType>
